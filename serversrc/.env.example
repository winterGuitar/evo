# 依赖安装
npm install dotenv

# 环境变量配置
# 复制 .env.example 为 .env 并填写实际配置
cp .env.example .env

# ===================== API 配置 =====================
# 即梦 API 配置（火山引擎）
JIMENG_ACCESS_KEY_ID=your_access_key_id_here
JIMENG_SECRET_ACCESS_KEY=your_secret_access_key_here

# 万相 API 配置（阿里云 DashScope）
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# ===================== 服务配置 =====================
PORT=3001

# 启动服务
node server.js
